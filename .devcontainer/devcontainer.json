{
    "name": "Flutter Dev Env",
    "image": "matspfeiffer/flutter",
    "settings": {
	"terminal.integrated.automationShell.linux": "/bin/wsl"
    },
    "extensions": [
        "dart-code.dart-code",
        "dart-code.flutter"
    ],
    "mounts": [
        "source=${localEnv:HOME}/c,target=/c,type=bind,consistency=cached"
    ],
    "remoteEnv": {
        "CHROME_EXECUTABLE" : "${localEnv:CHROME_EXECUTABLE}"
    }
}